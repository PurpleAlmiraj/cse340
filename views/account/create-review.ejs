<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <script>
        window.location.href = "/";
    </script>
<% } %>

<%- messages() %> <!-- Flash messages -->

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form action="/account/create-review" method="post" class="create-review-form" id="createreviewform">
    <div class="form-group">
        <label for="review_date" class="form-label">Review Date:</label>
        <input type="date" name="review_date" id="review_date" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="review_text" class="form-label">Review Text:</label>
        <textarea name="review_text" id="review_text" class="form-control" cols="30" rows="10" required></textarea>
    </div>

    <input type="hidden" name="account_id" value="<%= account_id %>">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <div class="form-actions">
        <button type="submit" class="form-button">Create Review</button>
    </div>
</form>
