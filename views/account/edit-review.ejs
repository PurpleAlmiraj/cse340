<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

<%- messages() %> <!-- Flash messages -->

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/edit-review" method="post" id="editreviewform">
<div>
  <label for="review_date">Review Date:</label>
</div>
<div>
  <input type="text" name="review_date" id="review_date" value="<%= formattedDate %>" readonly>
</div>

<div>
  <label for="review_text">Review:</label>
</div>
<div>
  <textarea name="review_text" id="review_text" cols="30" rows="10" required></textarea>
</div>

  <input type="hidden" name="review_id" value="<%= review.review_id %>">
  <input type="hidden" name="account_id" value="<%= review.account_id %>">
  <input type="hidden" name="inv_id" value="<%= review.inv_id %>">

<div>
  <button type="submit">Update Review</button>
</div>
</form>